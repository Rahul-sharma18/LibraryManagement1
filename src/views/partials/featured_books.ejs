<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Featured Books</h2>
                </div>
                <div class="featured__controls">
                    <ul>
                        <li class="active" data-filter="*">All</li>
                        <% for(var i=0; i< tags.length; i++){ %>
                        <li data-filter=".<%= tags[i] %>" style="text-transform: capitalize"><%= tags[i] %></li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            <% for(var i=0; i< books.length; i++){ %>
            <% tags = books[i].tags.join(" ") %>
            <div class="col-lg-3 col-md-4 col-sm-6 mix <%= tags %>">
                <div class="featured__item">
                    <div class="featured__item__pic set-bg" data-setbg="/assets/img/featured/Wexler-NodeJS_hires.png">
                        <ul class="featured__item__pic__hover">
                            <li><a href="#"><i class="fa fa-heart"></i></a></li>
                            <li><a href="#"><i class="fa fa-star"></i></a></li>
                            <li><a href="#"><i class="fa fa-share"></i></a></li>
                        </ul>
                    </div>
                    <div class="featured__item__text">
                        <h6><a href="/books/<%= books[i].bookID %>"><%= books[i].title %></a></h6>
                        <h5><%= books[i].availableCopies %></h5>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</section>